import {put, takeLatest} from 'redux-saga/effects';

export const {name}Types = {
  {uppercaseName}: "@@{group}/{uppercaseName}",
  {uppercaseName}_SUCCEED: "@@{group}/{uppercaseName}_SUCCEED",
  {uppercaseName}_FAILED: "@@{group}/{uppercaseName}_FAILED"
};

export function {name}() {
  return { type: {name}Types.{uppercaseName} };
}

export function {name}Succeed() {
  return { type: {name}Types.{uppercaseName}_SUCCEED };
}

export function {name}Failed() {
  return { type: {name}Types.{uppercaseName}_FAILED };
}

export function* {name}Saga() {
  yield put({name}Succeed());
  yield put({name}Failed());
}

export function* watch{capitalizeName}() {
  yield takeLatest({name}Types.{uppercaseName}, {name}Saga);
}
